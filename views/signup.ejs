<!DOCTYPE html>
<html>
  <head>
    <%- include('partials/head') %>
  </head>
  <body>
  <h1>Sign up</h1>

  <% if (error) { %>
    <p><%= error %></p>
  <% } %>
  <form method="post" action="/signup">
    <div class="grid-item-1">
      <label for="firstname">First Name:</label>
      <input type="text" id="firstname" name="firstname" tabindex="1" required>
    </div>
    <div class="grid-item-2">
      <label for="email">Email:</label>
      <input type="email" id="email" name="email" tabindex="3" required>
    </div>
    
    <div class="grid-item-1">
      <label for="lastname">Last Name:</label>
      <input type="text" id="lastname" name="lastname" tabindex="2" required>
    </div>
    <div class="grid-item-2">
      <label for="password">Password:</label>
      <input type="password" id="password" name="password" tabindex="4" required>
    </div>
    <div class="grid-item-1">
      <button type="submit" tabindex="6">Sign up</button>
    </div>
    <div class="grid-item-2">
      <label for="confirmPassword">Confirm password:</label>
      <input type="password" id="confirmPassword" name="confirmPassword" tabindex="5" required>
    </div>
    
  </form>  
  <%- include('partials/script') %>
  <%- include('partials/footer') %>
</body>
</html>
